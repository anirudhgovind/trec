citHeader("To cite trec in publications use:")

citEntry(
  entry    = "Manual",
  title    = "trec: Trend estimation and classification for time series data",
  author   = "Ohishi M., Solvang H. K.",
  year     = 2023,
  note     = "R package version 1.1.0",
  url      = "https://github.com/ohishim/trec",
  textVersion = paste("
    Ohishi, M. & Solvang, H. K. (2023).
    trec: Trend estimation and classification for time series data.
    R package version 1.1.0.
    https://github.com/ohishim/trec
  ")
)
